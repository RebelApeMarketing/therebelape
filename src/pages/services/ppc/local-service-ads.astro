          <!-- Performance Reporting -->
          <div class="bg-white p-6 rounded-lg shadow-lg md:col-span-2 lg:col-span-2">
            <h3 class="text-xl font-bold mb-4 text-gray-900">Performance Reporting</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2">
              <ul class="space-y-2 text-gray-700">
                <li class="flex gap-2 items-start">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Monthly lead reports</span>
                </li>
                <li class="flex gap-2 items-start">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Cost-per-lead tracking</span>
                </li>
                <li class="flex gap-2 items-start">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Review growth metrics</span>
                </li>
              </ul>
              <ul class="space-y-2 text-gray-700">
                <li class="flex gap-2 items-start">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Competitive position analysis</span>
                </li>
                <li class="flex gap-2 items-start">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>ROI by service type</span>

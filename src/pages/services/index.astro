---
import Base from '../../layouts/Base.astro';
import Hero from '../../components/sections/Hero.astro';
import SocialProofBar from '../../components/sections/SocialProofBar.astro';
import CaseStudy from '../../components/sections/CaseStudy.astro';
import TestimonialsDefault from '../../components/sections/TestimonialsDefault.astro';
import GreenCheck from '../../components/ui/GreenCheck.astro';
import Button from '../../components/ui/Button.astro';

// SEO
const title = "Marketing Services for Contractors | Rebel Ape";
const description = "Complete marketing solutions for contractors. Website design, PPC advertising, SEO, and Google Business Profile management. Everything you need to get more qualified leads.";
const canonical = "https://therebelape.com/services/";
const image = "https://RebelApeCDN.b-cdn.net/bg-gorilla-direct.webp";
const type = "website";
const robots = "index, follow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <section>
    <Hero
      title="Marketing Services <span class='text-rebel-green'>Built For Contractors</span>"
      subtitle="Everything You Need To <span class='text-rebel-green'>Dominate Your Market.</span>"
      description="We don't do vanity metrics. We focus on what actually matters: <strong>qualified leads, phone calls, and booked jobs.</strong> Here's how we make it happen."
      features={[
        'Websites That Convert',
        'Ads That Work',
        'Local Search Dominance'
      ]}
      buttonText="Schedule a Call"
      buttonIcon="calendar"
      buttonHref="/schedule/"
      fetchpriority="high"
    />
    <SocialProofBar />

    <!-- Services Overview -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-4">
            What We Do
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            Five core services designed to get your phone ringing with qualified leads.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Website Design -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
            <div class="h-1 bg-[#32C55F]"></div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10 text-[#32C55F] flex-shrink-0">
                  <path fill="#32C55F" d="M3,20V10H8V21H4A1,1,0,0,1,3,20ZM21,4a1,1,0,0,0-1-1H4A1,1,0,0,0,3,4V8H21ZM20,21a1,1,0,0,0,1-1V10H10V21Z"/>
                </svg>
                <h3 class="text-2xl font-bold text-gray-900">Website Design</h3>
              </div>
              <p class="text-gray-700 mb-6">
                Fast, conversion-focused websites built for contractors. No bloat. No unnecessary features. Just clean design that turns visitors into customers.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Lightning-fast load times</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Mobile-optimized design</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Built for lead generation</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Clear calls-to-action</span>
                </li>
              </ul>
              <Button text="Learn More" icon="learn" href="/services/website-design/" />
            </div>
          </div>

          <!-- PPC Management -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
            <div class="h-1 bg-[#32C55F]"></div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="currentColor" class="size-10 text-[#32C55F] flex-shrink-0">
                  <path fill="#32C55F" d="M15.989 1.396h0.032c1.197 0 2.307 0.401 3.197 1.073h0.005c0.615 0.463 1.125 1.057 1.489 1.733l5.953 10.36 0.036 0.083 4.557 7.907c0.485 0.817 0.74 1.755 0.74 2.713 0 0.751-0.156 1.469-0.437 2.12l0.005 0.021c-0.213 0.484-0.495 0.927-0.844 1.328-0.396 0.459-0.864 0.853-1.396 1.156-0.787 0.459-1.683 0.703-2.593 0.713h-0.089c-1.156 0-2.276-0.375-3.197-1.073h-0.005c-0.615-0.463-1.125-1.057-1.489-1.733l-5.953-10.36-0.036-0.083-4.579-7.943c-0.473-0.813-0.719-1.735-0.719-2.677 0-0.563 0.088-1.109 0.251-1.62l0.009-0.032 0.016-0.041c0.068-0.208 0.156-0.448 0.156-0.448 0.208-0.479 0.495-0.921 0.833-1.312l0.084-0.099 0.020-0.021v-0.005h0.005l0.011-0.016 0.011-0.004c0.359-0.396 0.787-0.745 1.276-1.027 0.787-0.459 1.683-0.703 2.593-0.713zM5.344 30.604h-0.079c-0.911-0.011-1.807-0.255-2.593-0.713-0.532-0.303-1-0.697-1.396-1.156-0.349-0.401-0.631-0.844-0.844-1.328l0.005-0.021c-0.292-0.667-0.437-1.391-0.437-2.12 0-0.995 0.271-1.921 0.74-2.713l4.557-7.907 0.036-0.083 4.052-7.047c0.099 0.859 0.364 1.703 0.792 2.473l0.077 0.131 4.5 7.807v-0.015l0.089 0.192 0.385 0.677-5.183 9.016c-0.364 0.676-0.875 1.271-1.489 1.733h-0.005c-0.921 0.699-2.041 1.073-3.197 1.073z"/>
                </svg>
                <h3 class="text-2xl font-bold text-gray-900">PPC Management</h3>
              </div>
              <p class="text-gray-700 mb-6">
                Google Ads, Meta Ads, and Local Service Ads managed by experts. Strategic targeting, conversion tracking, and continuous optimization to maximize your ROI.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Google & Meta campaigns</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Local Service Ads setup</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Conversion tracking & reporting</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Daily optimization</span>
                </li>
              </ul>
              <Button text="Learn More" icon="arrow-right" href="/services/ppc/" />
            </div>
          </div>

          <!-- SEO Services -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
            <div class="h-1 bg-[#32C55F]"></div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10 text-[#32C55F] flex-shrink-0">
                  <path fill="#32C55F" d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
                </svg>
                <h3 class="text-2xl font-bold text-gray-900">SEO Services</h3>
              </div>
              <p class="text-gray-700 mb-6">
                Local SEO strategies that get you found when customers search for contractors in your area. Rank higher, get more organic traffic, close more jobs.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Local search optimization</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Keyword research & targeting</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">On-page optimization</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Monthly ranking reports</span>
                </li>
              </ul>
              <Button text="Learn More" icon="arrow-right" href="/services/seo/" />
            </div>
          </div>

          <!-- Social Media -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
            <div class="h-1 bg-[#32C55F]"></div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10 text-[#32C55F] flex-shrink-0">
                  <path fill="#32C55F" d="M16.75,13.96C17.65,13.79 18.3,13.03 18.3,12.1M14.5,13.93C13.6,13.76 12.95,13 12.95,12.07C12.95,11.14 13.6,10.38 14.5,10.21M11.13,11.33C11.13,10.4 11.78,9.64 12.68,9.47M8.76,11.3C8.76,10.37 9.41,9.61 10.31,9.44M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12.5,11C11.12,11 10,12.12 10,13.5C10,14.88 11.12,16 12.5,16C13.88,16 15,14.88 15,13.5C15,12.12 13.88,11 12.5,11Z"/>
                </svg>
                <h3 class="text-2xl font-bold text-gray-900">Social Media</h3>
              </div>
              <p class="text-gray-700 mb-6">
                Consistent posting and community management that keeps your business top-of-mind. Build authority and credibility while we handle all the content.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Regular content posting</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Community engagement</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Before & after showcases</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Review & reputation management</span>
                </li>
              </ul>
              <Button text="Learn More" icon="arrow-right" href="/services/social-media/" />
            </div>
          </div>

          <!-- Google Business Profile -->
          <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
            <div class="h-1 bg-[#32C55F]"></div>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10 text-[#32C55F] flex-shrink-0">
                  <path fill="#32C55F" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
                <h3 class="text-2xl font-bold text-gray-900">Google Business Profile</h3>
              </div>
              <p class="text-gray-700 mb-6">
                Dominate the map pack and show up first when customers search on Google Maps. Profile optimization, review management, and regular updates.
              </p>
              <ul class="space-y-3 mb-8">
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Complete profile optimization</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Review generation & management</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Regular posts & updates</span>
                </li>
                <li class="flex items-start gap-3">
                  <GreenCheck />
                  <span class="text-gray-600">Map pack ranking strategies</span>
                </li>
              </ul>
              <Button text="Learn More" icon="arrow-right" href="/services/google-business-profile/" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Rebel Ape -->
    <section class="py-16 md:py-24 section-slate">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-4">
            Why <span class="text-[#32C55F]">Rebel Ape</span>?
          </h2>
          <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
            We're not your typical marketing agency. We specialize in one thing: getting contractors more qualified leads.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <div class="bg-white p-8 rounded-lg shadow-xl">
            <h3 class="text-2xl font-bold mb-4">Contractor Specialists</h3>
            <p class="text-gray-700">We only work with home service businesses. We understand your market, your customers, and what actually drives results in your industry.</p>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-xl">
            <h3 class="text-2xl font-bold mb-4">No BS Reporting</h3>
            <p class="text-gray-700">You'll know exactly where your money is going. Transparent reporting on leads, calls, conversions, and cost-per-acquisition. No vanity metrics.</p>
          </div>

          <div class="bg-white p-8 rounded-lg shadow-xl">
            <h3 class="text-2xl font-bold mb-4">Results-Focused</h3>
            <p class="text-gray-700">We measure success by one thing: qualified leads that turn into booked jobs. Everything else is just noise.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-16 md:py-24 section-checkers">
      <CaseStudy />
    </section>

    <section class="py-16 md:py-24 section-slate">
      <TestimonialsDefault />
    </section>

  </section>
</Base>

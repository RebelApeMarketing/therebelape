---
import Base from '../../../layouts/Base.astro';
import HeroHome from '../../../components/sections/HeroHome.astro';
import Button from '../../../components/ui/Button.astro';
import SocialProofBar from '../../../components/sections/SocialProofBar.astro';
import CaseStudy from '../../../components/sections/CaseStudy.astro';
import TestimonialsWebsiteDesign from '../../../components/testimonials/TestimonialsWebsiteDesign.astro';
import FAQwebsiteDesign from '../../../components/faqs/FAQwebsiteDesign.astro';
import OrganizationSchema from '../../../components/schema/OrganizationSchema.astro';
import ServiceSchema from '../../../components/schema/ServiceSchema.astro';
import BreadcrumbSchema from '../../../components/schema/BreadcrumbSchema.astro';
import WebPageSchema from '../../../components/schema/WebPageSchema.astro';

// SEO
const title = "WordPress Website Design for Contractors | Rebel Ape";
const description = "Fast, fully managed WordPress websites for contractors. Built to rank on Google, optimized for mobile, and designed to convert visitors into calls.";
const canonical = "https://therebelape.com/services/website-design/";
const image = "https://RebelApeCDN.b-cdn.net/featured-website-design.webp"; // 1200×630 recommended
const type = "website"; // or "article" for posts
const robots = "index, follow"; // optional override

// Breadcrumbs
const breadcrumbs = [
  { name: "Home", url: "https://therebelape.com/" },
  { name: "Services", url: "https://therebelape.com/services/" },
  { name: "Website Design", url: canonical }
];
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <!-- Schema Markup -->
  <OrganizationSchema slot="head" />
  <ServiceSchema
    slot="head"
    name="Website Design for Contractors"
    description={description}
    url={canonical}
    serviceType="Web Design"
  />
  <BreadcrumbSchema slot="head" breadcrumbs={breadcrumbs} />
  <WebPageSchema
    slot="head"
    type="WebPage"
    name={title}
    description={description}
    url={canonical}
    image={image}
  />
  <section>
    <HeroHome
      title="Websites <span class='text-rebel-green'>Built To Convert.</span>"
      subtitle="Fast. Clean. <span class='text-rebel-green'>Managed For You.</span>"
      description="WordPress websites built for contractors who want to <strong>rank on Google</strong> and <strong>turn visitors into calls.</strong> We build it, optimize it, and <strong>handle everything</strong> so you don't have to."
      buttonText="Schedule Strategy Session"
      buttonIcon="calendar"
      buttonHref="/schedule/"
    />
    <SocialProofBar />


    <!-- What We Build Section -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div>
            <img
              src="https://RebelApeCDN.b-cdn.net/website-wordpress-lightening.webp"
              alt="WordPress Website Design for Contractors"
              class="w-full rounded-lg"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>

          <div>
            <h2 class="text-4xl md:text-5xl font-bold mb-6">
              WordPress, <span class="text-rebel-green">Done Right</span>
            </h2>
            <p class="text-lg text-gray-700 mb-6">
              WordPress gets a bad reputation—and honestly, most of the time it's earned. Bloated themes, too many plugins, nobody watching the security updates. We build WordPress sites the right way: lean, fast, and optimized to rank and convert.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Built for Speed:</strong> Optimized hosting, caching, and clean builds that pass Core Web Vitals</span>
              </li>
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>SEO-Ready from Day One:</strong> Proper structure, schema markup, and on-page optimization built in</span>
              </li>
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Mobile-First:</strong> 80%+ of your customers are on mobile—your site is built for that first</span>
              </li>
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Fully Managed:</strong> Updates, security, edits, new pages—we handle it. You focus on your business.</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- We Manage It Section -->
    <section class="py-16 md:py-24 section-slate">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="order-2 lg:order-1">
            <h2 class="text-4xl md:text-5xl font-bold mb-6">
              Tired of the <span class="text-rebel-green">Headaches</span>?
            </h2>
            <p class="text-xl text-gray-700 mb-6">
              Endless updates. Plugin conflicts. Security nightmares. A site that's slow and you don't know why.
            </p>
            <p class="text-lg text-gray-700 mb-8">
              Whether we're building your site from scratch or taking over an existing one, we handle all of it. You get a fast, healthy WordPress site without ever logging in.
            </p>
            <div class="space-y-4 mb-8">
              <div class="bg-white p-4 rounded-lg border-l-4 border-[#32C55F] shadow-2xl">
                <p class="font-semibold text-gray-900">Ongoing Management</p>
                <p class="text-gray-700">Updates, backups, security monitoring—handled. Your site stays healthy without you lifting a finger.</p>
              </div>
              <div class="bg-white p-4 rounded-lg border-l-4 border-[#32C55F] shadow-2xl">
                <p class="font-semibold text-gray-900">Need Changes? Just Ask.</p>
                <p class="text-gray-700">New page, updated copy, a fresh offer—send us a message. We take care of it fast.</p>
              </div>
              <div class="bg-white p-4 rounded-lg border-l-4 border-[#32C55F] shadow-2xl">
                <p class="font-semibold text-gray-900">Already Have a WordPress Site?</p>
                <p class="text-gray-700">We can take it over, clean it up, and get it performing the way it should.</p>
              </div>
            </div>
          </div>

          <div class="order-1 lg:order-2">
            <img
              src="https://RebelApeCDN.b-cdn.net/website-gorilla-square.webp"
              alt="Managed WordPress for Contractors"
              class="w-full rounded-lg shadow-2xl"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Portfolio Section -->
    <section class="py-16 md:py-24 section-slate">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            See What We've Built
          </h2>
          <p class="text-xl text-gray-700 max-w-4xl mx-auto">
            Every site tells a story. Here are some of our favorites—real contractors, real results.
          </p>
        </div>

        <!-- Portfolio Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
            <img 
              src="https://RebelApeCDN.b-cdn.net/website-devlope-intuitive.webp" 
              alt="Develop Intuitive Website" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600" 
              height="400"
            />
          </div>
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
            <img 
              src="https://RebelApeCDN.b-cdn.net/website-out-ther-roofing.webp" 
              alt="Out There Roofing Website" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600" 
              height="400"
            />
          </div>
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
            <img 
              src="https://RebelApeCDN.b-cdn.net/website-redline-roofing.webp" 
              alt="Redline Roofing Website" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600" 
              height="400"
            />
          </div>
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
            <img 
              src="https://RebelApeCDN.b-cdn.net/website-swiss-mixx.webp" 
              alt="Swiss Mixx Website" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600" 
              height="400"
            />
          </div>
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
            <img 
              src="https://RebelApeCDN.b-cdn.net/website-taste-buzz.webp" 
              alt="Taste Buzz Website" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600" 
              height="400"
            />
          </div>
          <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition">
            <img 
              src="https://RebelApeCDN.b-cdn.net/website-tomchak-skolout.webp" 
              alt="Tomchak Skolout Website" 
              class="w-full h-64 object-cover"
              loading="lazy"
              width="600" 
              height="400"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Landing Pages CTA -->
    <section class="py-12 section-checkers">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Need a Landing Page Instead?</h2>
        <p class="text-lg text-gray-700 mb-6">
          Running ads and need a high-converting page built specifically for a campaign? We've got a dedicated service for that.
        </p>
        <a href="/services/website-design/landing-pages/" class="inline-block bg-rebel-green text-white font-bold px-8 py-4 rounded-lg hover:opacity-90 transition">
          See Our Landing Pages Service →
        </a>
      </div>
    </section>

    <section class={`py-16 md:py-24 section-slate`}>
      <CaseStudy />
    </section>

    <section class="py-16 md:py-24 section-checkers">
      <TestimonialsWebsiteDesign />
    </section>

    <section class={`py-16 md:py-24 section-slate`}>
      <FAQwebsiteDesign />
    </section>

  </section>
</Base>

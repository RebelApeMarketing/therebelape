---
import Base from '../../../layouts/Base.astro';
import Hero from '../../../components/sections/Hero.astro';
import SocialProofBar from '../../../components/sections/SocialProofBar.astro';
import CaseStudy from '../../../components/sections/CaseStudy.astro';
import TestimonialsDefault from '../../../components/testimonials/TestimonialsDefault.astro';
import FAQdefault from '../../../components/faqs/FAQdefault.astro';
import OrganizationSchema from '../../../components/schema/OrganizationSchema.astro';
import ServiceSchema from '../../../components/schema/ServiceSchema.astro';
import BreadcrumbSchema from '../../../components/schema/BreadcrumbSchema.astro';

// SEO
const title = "Social Media Marketing for Contractors | Rebel Ape";
const description = "Professional social media management for contractors. Consistent posting, engagement, and content that builds authority and keeps your business top-of-mind.";
const canonical = "https://therebelape.com/services/social-media/";
const image = "https://RebelApeCDN.b-cdn.net/bg-gorilla-direct.webp";
const type = "website";
const robots = "index, follow";

// Breadcrumbs
const breadcrumbs = [
  { name: "Home", url: "https://therebelape.com/" },
  { name: "Services", url: "https://therebelape.com/services/" },
  { name: "Social Media", url: canonical }
];
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <!-- Schema Markup -->
  <OrganizationSchema slot="head" />
  <ServiceSchema
    slot="head"
    name="Social Media Marketing for Contractors"
    description={description}
    url={canonical}
    serviceType="Social Media Management"
  />
  <BreadcrumbSchema slot="head" breadcrumbs={breadcrumbs} />
  <section>
    <Hero
      backgroundImage="https://RebelApeCDN.b-cdn.net/bg-gorilla-direct.webp"
      title="Social Media That <span class='text-rebel-green'>Builds Your Brand</span>"
      subtitle="Consistent Posting That Keeps You Top-Of-Mind With Customers."
      description="We handle your social media so you can focus on your business. <strong>Regular posting, community engagement,</strong> and content that positions you as the <strong>go-to contractor in your area.</strong>"
      features={[
        'Consistent Content Posting',
        'Community Engagement',
        'Authority Building'
      ]}
      buttonText="Schedule a Call"
      buttonIcon="calendar"
      buttonHref="/schedule/"
      fetchpriority="high"
    />
    <SocialProofBar />


    <!-- Consistent Posting Section -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-stretch">
          <!-- Image: 50% width on desktop -->
          <div class="flex">
            <img
              src="https://RebelApeCDN.b-cdn.net/featured-social-media-marketing-for-plumbers.webp"
              alt="Social Media Posting for Contractors"
              class="w-full h-full object-cover rounded-lg"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>

          <!-- Text: 50% width on desktop -->
          <div>
            <h2 class="text-4xl md:text-5xl font-bold mb-6">
              <span class="text-rebel-green">Consistent Posting</span> Without The Hassle
            </h2>
            <p class="text-lg text-gray-700 mb-6">
              You're busy running your business. Finding time to post on Facebook, Instagram, and other platforms? That's where we come in. We keep your social presence active with regular, professional content.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Regular Content Calendar:</strong> Scheduled posts keep your business visible and top-of-mind</span>
              </li>
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Before & After Showcases:</strong> Highlight your best work and craftsmanship</span>
              </li>
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Educational Content:</strong> Tips, advice, and insights that position you as the expert</span>
              </li>
              <li class="flex gap-3">
                <span class="text-[#32C55F] text-xl font-bold">✓</span>
                <span class="text-gray-700"><strong>Seasonal & Timely Posts:</strong> Content that's relevant to your customers right now</span>
              </li>
            </ul>
            <p class="text-gray-700 mb-8">
              We create the content, schedule the posts, and keep your profiles active. You focus on the work—we make sure people see it.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Engagement & Community Section -->
    <section class="py-16 md:py-24 section-slate">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-stretch">
          <!-- Text: 50% width on desktop (right side) -->
          <div class="order-2 lg:order-1">
            <h2 class="text-4xl md:text-5xl font-bold mb-6">
              Engagement That <span class="text-rebel-green">Builds Trust</span>
            </h2>
            <p class="text-lg text-gray-700 mb-6">
              Social media isn't just about posting—it's about being present. We monitor your pages, respond to comments and messages, and engage with your community to build trust and credibility.
            </p>

            <div class="mb-8 pb-8 border-b border-gray-300">
              <h3 class="text-2xl font-bold mb-3">Active Community Management</h3>
              <p class="text-gray-700 mb-3">
                When someone comments on your post or sends a message, quick responses matter. We monitor your accounts and engage with your audience so no one feels ignored.
              </p>
              <ul class="space-y-2 text-gray-700">
                <li class="flex gap-3 items-center">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Comment monitoring and responses</span>
                </li>
                <li class="flex gap-3 items-center">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Message management and engagement</span>
                </li>
                <li class="flex gap-3 items-center">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Review monitoring and professional responses</span>
                </li>
                <li class="flex gap-3 items-center">
                  <span class="text-[#32C55F] text-lg">→</span>
                  <span>Building genuine connections with followers</span>
                </li>
              </ul>
            </div>

            <div class="mb-8">
              <h3 class="text-2xl font-bold mb-3">Reputation Management</h3>
              <p class="text-gray-700 mb-3">
                Your online reputation matters. We help manage reviews, respond professionally to feedback, and showcase positive customer experiences across your social platforms.
              </p>
              <p class="text-gray-700">
                Every interaction is an opportunity to build trust. We make sure your brand is represented professionally at every touchpoint.
              </p>
            </div>
          </div>

          <!-- Image: 50% width on desktop (left side) -->
          <div class="order-1 lg:order-2 flex">
            <img
              src="https://RebelApeCDN.b-cdn.net/featured-marketing-testing-strategy-drive-explosive-growth-in-2025.webp"
              alt="Social Media Engagement and Community"
              class="w-full h-full object-cover rounded-lg"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Content Strategy Section -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-stretch">
          <!-- Image - comes first on mobile, left on desktop -->
          <div class="order-1 flex">
            <img
              src="https://RebelApeCDN.b-cdn.net/featured-content-syndication-strategies.webp"
              alt="Social Media Content Strategy"
              class="w-full h-full object-cover rounded-lg shadow-2xl"
              loading="lazy"
              width="600"
              height="400"
            />
          </div>

          <!-- Text - comes second on mobile, right on desktop -->
          <div class="order-2">
            <h2 class="text-4xl md:text-5xl font-bold mb-6">
              Content That <span class="text-rebel-green">Showcases Your Expertise</span>
            </h2>
            <p class="text-xl text-gray-700 mb-6">
              We create posts that highlight your work, share valuable tips, and keep your business visible to past, present, and future customers.
            </p>
            <p class="text-lg text-gray-700 mb-8">
              From project showcases to seasonal reminders, every post is designed to reinforce your reputation as the trusted contractor in your area.
            </p>
            <div class="space-y-4 mb-8">
              <div class="bg-white p-4 rounded-lg border-l-4 border-[#32C55F] shadow-2xl">
                <p class="font-semibold text-gray-900">Project Showcases</p>
                <p class="text-gray-700">We turn your completed jobs into compelling social content that attracts new customers.</p>
              </div>
              <div class="bg-white p-4 rounded-lg border-l-4 border-[#32C55F] shadow-2xl">
                <p class="font-semibold text-gray-900">Educational Tips & Advice</p>
                <p class="text-gray-700">Helpful content that positions you as the go-to expert in your field.</p>
              </div>
              <div class="bg-white p-4 rounded-lg border-l-4 border-[#32C55F] shadow-2xl">
                <p class="font-semibold text-gray-900">Customer Stories & Testimonials</p>
                <p class="text-gray-700">Share positive experiences and build social proof that drives referrals.</p>
              </div>
            </div>
            <p class="text-gray-700">
              <strong>Note:</strong> We handle all image and text-based content. If you have video content you'd like to share, we're happy to post it for you—just supply the video.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class={`py-16 md:py-24 section-slate`}>
      <CaseStudy />
    </section>

    <section class="py-16 md:py-24 section-checkers">
      <TestimonialsDefault />
    </section>

    <section class={`py-16 md:py-24 section-slate`}>
      <FAQdefault />
    </section>

  </section>
</Base>

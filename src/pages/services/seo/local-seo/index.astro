// SEO
const title = "Local SEO for Contractors | Rebel Ape Marketing";
const description = "Show up in Google Maps and organic search results. We build long-term authority through optimized content, citations, and Google Business Profile management. SEO takes 6-8 months, but it compounds.";
const canonical = "https://therebelape.com/services/seo/local-seo/";
const image = "https://rebelapecdn.b-cdn.net/featured-google-business-profile-for-plumbers-office.webp";
const type = "website";
const robots = "index, follow";

// Breadcrumbs
const breadcrumbs = [
  { name: "Home", url: "https://therebelape.com/" },
  { name: "Services", url: "https://therebelape.com/services/" },
  { name: "SEO", url: "https://therebelape.com/services/seo/" },
  { name: "Local SEO", url: canonical }
];

// FAQs

      <CaseStudy />
    </section>

    <!-- Testimonials Section -->
    <section class="py-16 md:py-24 section-slate">
      <TestimonialsDefault />
    </section>

    <!-- FAQ Section -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-4xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-4">
            Frequently Asked <span class="text-rebel-green">Questions</span>
          </h2>
        </div>

        <div class="space-y-6">
          {faqs.map((faq) => (
            <div class="bg-white border border-gray-200 rounded-lg shadow-lg overflow-hidden">
              <div class="h-1 bg-rebel-green"></div>
              <div class="p-6">
                <h3 class="text-xl font-bold mb-3">{faq.question}</h3>
                <p class="text-gray-700">{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>

---
import Base from '../../../../layouts/Base.astro';
import Hero from '../../../../components/sections/Hero.astro';
import Button from '../../../../components/ui/Button.astro';
import OrganizationSchema from '../../../../components/schema/OrganizationSchema.astro';
import WebPageSchema from '../../../../components/schema/WebPageSchema.astro';

// SEO - noindex thank you pages
const title = "Thanks For Your Interest | Your Checklist Is On The Way!";
const description = "Check your inbox for the Ultimate Roofing Lead Generation Checklist from Rebel Ape Marketing.";
const canonical = "https://therebelape.com/lp/uomc/thank-you/";
const image = "https://RebelApeCDN.b-cdn.net/uomc-thank-you.webp";
const type = "website";
const robots = "noindex, nofollow";

const pdfUrl = "https://RebelApeCDN.b-cdn.net/The-Ultimate-Roofing-Lead-Gen-Checklist.pdf";
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <!-- Schema Markup -->
  <OrganizationSchema slot="head" />
  <WebPageSchema
    slot="head"
    type="WebPage"
    name={title}
    description={description}
    url={canonical}
    image={image}
  />

  <section>
    <!-- Hero -->
    <Hero
      backgroundImage="https://RebelApeCDN.b-cdn.net/hero-roofing-background.webp"
      title="Thanks For Your Interest, <span class='text-rebel-green'>Your Checklist Is On The Way!</span>"
      subtitle="Check your inbox for the email from <span class='text-rebel-green'>Rebel Ape Marketing.</span>"
      description="If it doesn't arrive in a couple of minutes, check your spam or promotions tab. You will receive a series of emails with tips on how to use the checklist to get more roofing leads. You can unsubscribe at any time, but we think you'll find them helpful!"
      showScheduleButton={false}
      fetchpriority="high"
    />

    <!-- Quick Actions -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-4xl mx-auto px-6">
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-16">
          <a
            href={pdfUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center rounded-[10px] px-8 py-4 text-lg font-semibold text-black bg-yellow-400 shadow-sm hover:bg-yellow-500 transition transform hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Download The PDF Now
          </a>
          <a
            href="/schedule/"
            class="inline-flex items-center justify-center rounded-[10px] px-8 py-4 text-lg font-semibold text-white bg-rebel-green shadow-sm hover:bg-rebel-green/90 transition transform hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Book A Quick Strategy Call
          </a>
        </div>

        <!-- Two Column Layout -->
        <div class="grid md:grid-cols-2 gap-12">

          <!-- What To Do Next -->
          <div class="bg-white p-8 rounded-lg shadow-xl border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">What To Do Next</h2>
            <ul class="space-y-4">
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">1.</span>
                <span class="text-gray-700">Open the checklist and mark what's complete vs. missing</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">2.</span>
                <span class="text-gray-700">Share it with your team so everyone's aligned</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">3.</span>
                <span class="text-gray-700">Pick 1–2 fixes this week (e.g., proof, speed, or follow-up)</span>
              </li>
            </ul>
          </div>

          <!-- Need A Hand -->
          <div class="bg-white p-8 rounded-lg shadow-xl border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Need A Hand?</h2>
            <p class="text-gray-600 mb-6">
              We'll help you prioritize changes that move the needle fastest. No pressure, no sales pitch — just a real conversation about what's working and what's not.
            </p>
            <Button text="Schedule A Call" icon="calendar" href="/schedule/" />
          </div>

        </div>
      </div>
    </section>

  </section>
</Base>

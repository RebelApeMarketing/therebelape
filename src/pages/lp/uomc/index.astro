---
import LandingPage from '../../../layouts/LandingPage.astro';
import SocialProofBar from '../../../components/sections/SocialProofBar.astro';
import CaseStudy from '../../../components/sections/CaseStudy.astro';
import TestimonialsDefault from '../../../components/testimonials/TestimonialsDefault.astro';
import OrganizationSchema from '../../../components/schema/OrganizationSchema.astro';
import WebPageSchema from '../../../components/schema/WebPageSchema.astro';
import Button from '../../../components/ui/Button.astro';

// SEO
const title = "Roofing Marketing Checklist | Generate Consistent Roofing Leads";
const description = "Download the free Roofing Marketing Checklist and turn visitors into booked inspections and replacements. Fix conversion leaks, rank in local maps, and grow consistently.";
const canonical = "https://therebelape.com/lp/uomc/";
const image = "https://RebelApeCDN.b-cdn.net/uomc-featured-image.webp";
const type = "website";
const robots = "noindex, nofollow";
---

<LandingPage {title} {description} {canonical} {image} {type} {robots}>
  <!-- Schema Markup -->
  <OrganizationSchema slot="head" />
  <WebPageSchema
    slot="head"
    type="WebPage"
    name={title}
    description={description}
    url={canonical}
    image={image}
  />

  <!-- Additional UOMC-specific schema -->
  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "DigitalDocument",
    "name": "Roofing Marketing Checklist (for Roofers)",
    "about": "Free marketing checklist tailored for roofing companies to improve local SEO, ads, and site conversion.",
    "fileFormat": "application/pdf",
    "url": "https://RebelApeCDN.b-cdn.net/The-Ultimate-Roofing-Lead-Gen-Checklist.pdf",
    "publisher": {"@type": "Organization", "name": "Rebel Ape Marketing"},
    "image": "https://RebelApeCDN.b-cdn.net/uomc-featured-image.webp"
  }
  </script>

  <script type="application/ld+json" slot="head">
  {
    "@context": "https://schema.org",
    "@type": "Offer",
    "itemOffered": {
      "@type": "CreativeWork",
      "name": "Ultimate Roofing Lead Generation Checklist",
      "description": "A free marketing checklist designed to help roofing companies generate consistent leads and growth.",
      "fileFormat": "application/pdf",
      "url": "https://RebelApeCDN.b-cdn.net/The-Ultimate-Roofing-Lead-Gen-Checklist.pdf"
    },
    "price": "0",
    "priceCurrency": "USD",
    "availability": "https://schema.org/InStock"
  }
  </script>

  <section>
    <!-- Custom Hero - HeroHome Style -->
    <section class="w-full overflow-hidden relative">
      <!-- Blurred background image - roofing crew -->
      <div
        class="absolute inset-0 bg-cover bg-center bg-no-repeat"
        style="background-image: url('https://RebelApeCDN.b-cdn.net/hero-roofing-background.webp'); filter: blur(2px);"
      ></div>
      <!-- Gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-b lg:bg-gradient-to-r from-black/80 via-black/60 to-black/30 z-0"></div>

      <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="flex flex-col lg:flex-row items-center">

          <!-- Left side: Text content -->
          <div class="w-full lg:w-[55%] text-white text-center lg:text-left py-16 md:py-20">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-black leading-tight mb-6">
              Get More <span class="text-rebel-green">Roofing Jobs</span> With This Marketing Checklist
            </h1>

            <h2 class="text-xl md:text-2xl font-semibold text-gray-200 mb-4">
              Fix the Gaps in Your Marketing That Are <span class="text-rebel-green">Costing You Jobs</span>
            </h2>

            <p class="text-lg text-gray-300 mb-8 lg:max-w-xl">
              This system makes your marketing work — finally bringing your <strong>ads, SEO, social media, and website</strong> together to generate <strong>consistent leads.</strong> Most roofers don't need more traffic — they need better <strong>marketing flow.</strong>
            </p>

            <!-- Button -->
            <div class="flex justify-center lg:justify-start mb-8">
              <div class="transform scale-110 origin-center lg:origin-left">
                <a href="#get-checklist" class="inline-flex items-center justify-center gap-2 rounded-[10px] px-8 py-4 text-lg font-semibold text-black bg-yellow-400 shadow-sm hover:bg-yellow-500 transition transform hover:scale-105">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                    <path fill-rule="evenodd" d="M12 2.25a.75.75 0 0 1 .75.75v11.69l3.22-3.22a.75.75 0 1 1 1.06 1.06l-4.5 4.5a.75.75 0 0 1-1.06 0l-4.5-4.5a.75.75 0 1 1 1.06-1.06l3.22 3.22V3a.75.75 0 0 1 .75-.75Zm-9 13.5a.75.75 0 0 1 .75.75v2.25a1.5 1.5 0 0 0 1.5 1.5h13.5a1.5 1.5 0 0 0 1.5-1.5V16.5a.75.75 0 0 1 1.5 0v2.25a3 3 0 0 1-3 3H5.25a3 3 0 0 1-3-3V16.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                  </svg>
                  Get My Free Checklist
                </a>
              </div>
            </div>

            <!-- Checkmarks -->
            <p class="flex flex-row gap-3 space-x-4 text-md justify-center lg:justify-start items-center">
              <span class="inline-block">
                <span class="text-rebel-green mr-2">✓</span> Fix Conversion Leaks
              </span>
              <span class="inline-block">
                <span class="text-rebel-green mr-2">✓</span> Rank in Local Maps
              </span>
              <span class="hidden lg:inline-block">
                <span class="text-rebel-green mr-2">✓</span> Grow Consistently
              </span>
            </p>
          </div>

          <!-- Right side: Booklet image with padding -->
          <div class="w-full lg:w-[45%] flex justify-center lg:justify-end items-center pt-2 pb-6 lg:py-10">
            <img
              src="https://RebelApeCDN.b-cdn.net/uomc-book.webp"
              alt="Ultimate Roofing Marketing Checklist"
              class="w-full max-w-md lg:max-w-lg h-auto"
              loading="eager"
              fetchpriority="high"
            />
          </div>

        </div>
      </div>
    </section>

    <link rel="preload" href="https://RebelApeCDN.b-cdn.net/hero-roofing-background.webp" as="image" />
    <link rel="preload" href="https://RebelApeCDN.b-cdn.net/uomc-book.webp" as="image" />

    <SocialProofBar />

    <!-- What You Get Section - Side by Side -->
    <section class="py-16 md:py-24 section-checkers">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">

          <!-- Left Side: Content -->
          <div>
            <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
              Here's What You Get
            </h2>
            <p class="text-lg text-gray-600 mb-8">
              It's a 16-page checklist breaking down what moves the needle in your marketing. Each page explains the tactic, why it works, and how to implement it so you understand your marketing, Google understands your company, and you win more jobs.
            </p>

            <!-- Open Booklet Image - no shadow -->
            <img
              src="https://RebelApeCDN.b-cdn.net/uomc-booklet-open.webp"
              alt="Open checklist booklet showing marketing tactics"
              class="w-full max-w-lg rounded-lg"
              loading="lazy"
            />
          </div>

          <!-- Right Side: 3 Steps + Button -->
          <div class="space-y-6">
            <!-- Step 1 -->
            <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
              <div class="h-1 bg-rebel-green"></div>
              <div class="p-6">
                <div class="flex items-start gap-4">
                  <div class="w-14 h-14 bg-rebel-green/10 rounded-full flex items-center justify-center shrink-0">
                    <span class="text-3xl font-black text-rebel-green">1</span>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">16-Page Grade Your Marketing Checklist eBook</h3>
                    <p class="text-gray-600">
                      Download the checklist, follow each section, and identify exactly where your marketing is falling short compared to what Google rewards.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Step 2 -->
            <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
              <div class="h-1 bg-rebel-green"></div>
              <div class="p-6">
                <div class="flex items-start gap-4">
                  <div class="w-14 h-14 bg-rebel-green/10 rounded-full flex items-center justify-center shrink-0">
                    <span class="text-3xl font-black text-rebel-green">2</span>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Get Your Marketing Right So Google and AI Understand You</h3>
                    <p class="text-gray-600">
                      As you implement the checklist items, Google's algorithm starts to see signals and starts to truly understand and differentiate you from competitors.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Step 3 -->
            <div class="bg-white border border-gray-200 rounded-lg shadow-xl overflow-hidden">
              <div class="h-1 bg-rebel-green"></div>
              <div class="p-6">
                <div class="flex items-start gap-4">
                  <div class="w-14 h-14 bg-rebel-green/10 rounded-full flex items-center justify-center shrink-0">
                    <span class="text-3xl font-black text-rebel-green">3</span>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Get More Traffic. Get More Leads. Close More Deals.</h3>
                    <p class="text-gray-600">
                      You start winning ad positions at lower costs, show up prominently in Google Maps and search results, and turn those clicks into booked jobs.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- CTA Button -->
            <div class="pt-4">
              <a href="#get-checklist" class="inline-flex items-center justify-center rounded-[10px] px-8 py-4 text-lg md:text-xl font-semibold text-black bg-yellow-400 shadow-sm hover:bg-yellow-500 transition transform hover:scale-105">
                Yes, Send Me My Free Checklist
              </a>
            </div>
          </div>

        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-16 md:py-24 section-slate">
      <TestimonialsDefault />
    </section>

    <!-- Case Studies -->
    <section class="py-16 md:py-24 section-checkers">
      <CaseStudy />
    </section>

    <!-- Final CTA with Form -->
    <section id="get-checklist" class="pt-16 md:pt-24 pb-0 section-slate overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 items-start">

          <!-- Left: Content (3 columns) -->
          <div class="lg:col-span-3">
            <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
              It's Time To Get Your Marketing System <span class="text-rebel-green">Built Right</span>
            </h2>
            <p class="text-lg text-gray-600 mb-6">
              Stop Wasting Money On A Broken Marketing System.
            </p>

            <div class="space-y-4 mb-8">
              <h3 class="text-xl font-bold text-gray-900">This Guide Helps You Identify All The Gaps In Your Marketing That's Keeping You Stuck.</h3>
              <p class="text-gray-600">
                By following this checklist, you'll identify where your marketing is disconnected which is likely causing issues in your lead flow. This checklist helps you make it right.
              </p>
            </div>

            <ul class="space-y-3 text-gray-700">
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">✓</span>
                <span>Start receiving local signals that qualify for conversions</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">✓</span>
                <span>Fix slow pages and layout issues that drop your form starts</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">✓</span>
                <span>Map every step from click → call so no leads fall through</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">✓</span>
                <span>Prioritize high-return keywords that book more estimates</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">✓</span>
                <span>Install simple automations so you're first to respond</span>
              </li>
              <li class="flex gap-3">
                <span class="text-rebel-green font-bold flex-shrink-0">✓</span>
                <span>Track what matters (calls, estimates, jobs) so you know what's working</span>
              </li>
            </ul>
          </div>

          <!-- Right: Form (2 columns) -->
          <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-2xl border border-gray-200 overflow-hidden">
              <div class="h-1 bg-rebel-green"></div>
              <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-2 text-center">Download Your Free Checklist Here</h3>
              <p class="text-gray-600 mb-6 text-center">Simply fill out the form, and we'll email it to you.</p>

              <form
                name="uomc-lp"
                method="POST"
                data-netlify="true"
                netlify-honeypot="bot-field"
                action="/lp/uomc/thank-you/"
                class="space-y-4"
              >
                <!-- Honeypot field for spam protection -->
                <input type="hidden" name="bot-field" />
                <input type="hidden" name="form-name" value="uomc-lp" />

                <div>
                  <label for="name" class="block text-sm font-medium text-gray-900 mb-2">
                    Full Name <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rebel-green focus:border-transparent"
                    placeholder="John Doe"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-medium text-gray-900 mb-2">
                    Email Address <span class="text-red-600">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rebel-green focus:border-transparent"
                    placeholder="john@example.com"
                  />
                </div>

                <div>
                  <label for="company" class="block text-sm font-medium text-gray-900 mb-2">
                    Company Name
                  </label>
                  <input
                    type="text"
                    id="company"
                    name="company"
                    class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rebel-green focus:border-transparent"
                    placeholder="ABC Roofing"
                  />
                </div>

                <button
                  type="submit"
                  class="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-bold py-4 px-4 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 text-lg"
                >
                  Yes, Send Me The Free Checklist
                </button>

                <p class="text-xs text-gray-500 text-center mt-4">
                  We respect your privacy. Unsubscribe at any time.
                </p>
              </form>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!-- Full Width Spread Image - No padding bottom, touches section bottom -->
      <div class="w-full max-w-7xl mx-auto mt-12">
        <img
          src="https://RebelApeCDN.b-cdn.net/uomc-booklet-spread-trans.webp"
          alt="UOMC Booklet Spread"
          class="w-full"
          loading="lazy"
        />
      </div>
    </section>

  </section>
</LandingPage>

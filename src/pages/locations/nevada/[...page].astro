---
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import Base from '../../../layouts/Base.astro';
import Hero from '../../../components/sections/Hero.astro';

export const getStaticPaths = (async ({ paginate }) => {
  // Get all Nevada locations
  const allLocations = await getCollection('locations');
  const nevadaLocations = allLocations
    .filter(location => location.data.state === 'Nevada' && !location.data.draft)
    .sort((a, b) => a.data.city.localeCompare(b.data.city));

  // Use paginate to create pages with 12 locations each
  return paginate(nevadaLocations, {
    pageSize: 12,
  });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

// Generate pagination numbers with ellipsis
function getPaginationNumbers(currentPage: number, lastPage: number) {
  const delta = 1;
  const range = [];
  const rangeWithDots = [];

  for (let i = 1; i <= lastPage; i++) {
    if (i === 1 || i === lastPage || (i >= currentPage - delta && i <= currentPage + delta)) {
      range.push(i);
    }
  }

  let prev = 0;
  for (const i of range) {
    if (prev && i - prev > 1) {
      rangeWithDots.push('...');
    }
    rangeWithDots.push(i);
    prev = i;
  }

  return rangeWithDots;
}

const paginationNumbers = getPaginationNumbers(page.currentPage, page.lastPage);

// SEO
const pageNum = page.currentPage > 1 ? ` - Page ${page.currentPage}` : '';
const title = `Contractor Marketing in Nevada | Rebel Ape Marketing${pageNum}`;
const description = "Expert contractor marketing services across Nevada. We help home service businesses generate consistent leads through SEO, Google Ads, and high-converting website design.";
const canonical = page.currentPage === 1
  ? "https://therebelape.com/locations/nevada/"
  : `https://therebelape.com/locations/nevada/${page.currentPage}/`;
const image = "https://RebelApeCDN.b-cdn.net/location-nevada.webp";
const type = "website";
const robots = "index,follow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <section>
    <Hero
      backgroundImage="https://RebelApeCDN.b-cdn.net/location-nevada.webp"
      title="<span class='text-rebel-green'>Nevada Contractor</span> Marketing That Gets <span class='text-rebel-green'>Results</span>"
      subtitle="Local Marketing Services Across Nevada"
      description="We help contractors across Nevada dominate their local markets with proven SEO strategies, Google Ads management, and high-converting websites."
      features={[
        'Dominate Local Search',
        'Generate Quality Leads',
        'Proven Track Record'
      ]}
      buttonText="Schedule a Call"
      buttonIcon="calendar"
      buttonHref="/schedule/"
      fetchpriority="high"
    />

    <!-- Locations Section -->
    <section class="py-16 md:py-24 section-slate">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {page.currentPage === 1 ? 'Nevada Locations' : `Nevada Locations - Page ${page.currentPage}`}
          </h2>
          <p class="text-lg text-gray-600">Select your city to learn more about our local marketing services</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {page.data.map(location => {
            const citySlug = location.slug.split('/').pop() || location.slug;
            return (
              <article class="bg-white rounded-lg shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300">
                {location.data.image && (
                  <img
                    src={location.data.image}
                    alt={`Contractor Marketing in ${location.data.city}`}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-2 leading-tight">
                    <a
                      href={`/locations/${location.data.state.toLowerCase()}/${citySlug}/`}
                      class="text-gray-900 hover:text-rebel-green transition-colors"
                    >
                      {location.data.city}
                    </a>
                  </h3>
                  <p class="text-gray-600 mb-4">{location.data.excerpt}</p>
                  <a
                    href={`/locations/${location.data.state.toLowerCase()}/${citySlug}/`}
                    class="inline-flex items-center text-rebel-green font-semibold hover:underline"
                  >
                    See Location
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            );
          })}
        </div>

        <!-- Pagination Controls -->
        {(page.lastPage > 1) && (
          <nav class="mt-12 flex justify-center items-center gap-2" aria-label="Pagination">
            {page.url.prev && (
              <a
                href={page.url.prev}
                class="px-3 py-2 md:px-4 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 font-semibold transition-colors"
                aria-label="Previous page"
              >
                <svg class="w-5 h-5 inline-block md:mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span class="hidden md:inline">Previous</span>
              </a>
            )}

            <div class="flex gap-1 md:gap-2">
              {paginationNumbers.map((item, index) => (
                item === '...' ? (
                  <span
                    key={`ellipsis-${index}`}
                    class="px-3 py-2 md:px-4 text-gray-500 font-semibold"
                  >
                    ...
                  </span>
                ) : (
                  <a
                    key={item}
                    href={item === 1 ? '/locations/nevada/' : `/locations/nevada/${item}/`}
                    class={`px-3 py-2 md:px-4 rounded-lg font-semibold transition-colors ${
                      item === page.currentPage
                        ? 'bg-rebel-green text-white'
                        : 'bg-white border border-gray-300 hover:bg-gray-50'
                    }`}
                    aria-label={`Page ${item}`}
                    aria-current={item === page.currentPage ? 'page' : undefined}
                  >
                    {item}
                  </a>
                )
              ))}
            </div>

            {page.url.next && (
              <a
                href={page.url.next}
                class="px-3 py-2 md:px-4 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 font-semibold transition-colors"
                aria-label="Next page"
              >
                <span class="hidden md:inline">Next</span>
                <svg class="w-5 h-5 inline-block md:ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </nav>
        )}
      </div>
    </section>

  </section>
</Base>

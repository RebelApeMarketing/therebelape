---
import Base from '../../layouts/Base.astro';
import Hero from '../../components/sections/Hero.astro';
import SocialProofBar from '../../components/sections/SocialProofBar.astro';
import Button from '../../components/ui/Button.astro';

// SEO
const title = "Legal | Rebel Ape Marketing";
const description = "Terms and Conditions, Privacy Policy, and legal information for Rebel Ape Marketing. Transparent policies written like humans — no legalese, no surprises.";
const canonical = "https://therebelape.com/legal/";
const image = "https://RebelApeCDN.b-cdn.net/bg-gorilla-direct.webp";
const type = "website";
const robots = "index, follow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <section>
    <Hero
      title="The <span class='text-rebel-green'>Legal Stuff</span>"
      subtitle="Transparent. Straightforward. <span class='text-rebel-green'>No BS.</span>"
      description="We keep our policies clear and our expectations honest. Here's where you'll find everything you need to know about how we handle your data and the rules of working together."
      features={[
        'Terms & Conditions',
        'Privacy Policy',
        'Written Like Humans'
      ]}
      buttonText="Schedule Strategy Session"
      buttonIcon="calendar"
      buttonHref="/schedule/"
      fetchpriority="high"
    />
    <SocialProofBar />
  </section>

  <!-- Intro -->
  <section class="py-16 md:py-24 section-checkers">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        We Believe in <span class="text-rebel-green">Transparency</span>
      </h2>
      <p class="text-lg text-gray-700">
        Nobody likes reading legal pages. We get it. But these documents exist to protect both of us and to make sure we're on the same page from day one. We've written them in plain language so you actually know what you're agreeing to.
      </p>
    </div>
  </section>

  <!-- Terms and Conditions: Text Left, Image Right -->
  <section class="py-16 md:py-24 section-slate">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16 items-stretch">
        <!-- Text: 2/3 width -->
        <div class="order-2 lg:order-1 lg:col-span-2 flex flex-col justify-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-6">
            <span class="text-rebel-green">Terms & Conditions</span>
          </h2>
          <p class="text-lg text-gray-700 mb-6">
            The rules of engagement for using our website and services. Covers everything from intellectual property and payment terms to liability, dispute resolution, and what happens if things don't work out. No surprises — just clear expectations for both sides.
          </p>
          <div>
            <Button text="Read Terms & Conditions" href="/legal/terms-and-conditions/" icon="arrow-right" />
          </div>
        </div>

        <!-- Image: 1/3 width -->
        <div class="order-1 lg:order-2 flex">
          <img
            src="https://RebelApeCDN.b-cdn.net/featured-terms-and-conditions.webp"
            alt="Rebel Ape Marketing Terms and Conditions"
            class="w-full h-auto lg:h-full object-cover rounded-lg"
            loading="lazy"
            width="600"
            height="400"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Privacy Policy: Image Left, Text Right -->
  <section class="py-16 md:py-24 section-checkers">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16 items-stretch">
        <!-- Image: 1/3 width -->
        <div class="order-1 lg:order-1 flex">
          <img
            src="https://RebelApeCDN.b-cdn.net/featured-privacy-policy.webp"
            alt="Rebel Ape Marketing Privacy Policy"
            class="w-full h-auto lg:h-full object-cover rounded-lg"
            loading="lazy"
            width="600"
            height="400"
          />
        </div>

        <!-- Text: 2/3 width -->
        <div class="order-2 lg:order-2 lg:col-span-2 flex flex-col justify-center">
          <h2 class="text-4xl md:text-5xl font-bold mb-6">
            <span class="text-rebel-green">Privacy Policy</span>
          </h2>
          <p class="text-lg text-gray-700 mb-6">
            How we collect, use, and protect your personal information. We don't sell your data, we don't spam you, and we don't play games with your privacy. This policy breaks down exactly what we collect, why we collect it, and what your rights are.
          </p>
          <div>
            <Button text="Read Privacy Policy" href="/legal/privacy-policy/" icon="arrow-right" />
          </div>
        </div>
      </div>
    </div>
  </section>

</Base>

---
import Base from '../layouts/Base.astro';
import Hero from '../components/sections/Hero.astro';
import SocialProofBar from '../components/sections/SocialProofBar.astro';
import PrivacyContent from '../content/pages/privacy-policy.md';

// SEO
const title = "Privacy Policy | Rebel Ape Marketing";
const description = "Privacy Policy for Rebel Ape Marketing and therebelape.com. Learn how we collect, use, protect, and manage your personal information when you use our website or services.";
const canonical = "https://therebelape.com/legal/privacy-policy/";
const image = "https://RebelApeCDN.b-cdn.net/Rebel%20Website/Homepage/bg-gorilla-direct.webp";
const type = "website";
const robots = "index, follow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <section>
    <Hero 
      title="How <span class='text-rebel-green'>Rebel Ape Marketing</span> Protects Your <span class='text-rebel-green'>Privacy</span>"
      subtitle="Clear. Straightforward. <span class='text-rebel-green'>No BS.</span>"
      description="Learn how we collect, use, and protect your information."
      features={[
        'What Data We Collect',
        'How We Use It',
        'Your Rights & Choices'
      ]}
      buttonText="Schedule a Call"
      buttonIcon="calendar"
      buttonHref="/schedule/"
      fetchpriority="high"
    />
    <SocialProofBar />
  </section>

  <section class={`py-6 md:py-8 section-checkers`}>
    <article class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 prose prose-slate">
      <PrivacyContent />
    </article>
  </section>

</Base>

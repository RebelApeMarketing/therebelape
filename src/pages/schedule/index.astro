---
import Base from '../../layouts/Base.astro';
import SocialProofBar from '../../components/sections/SocialProofBar.astro';
import TestimonialsDefault from '../../components/sections/TestimonialsDefault.astro';

const canonical = "https://therebelape.com/schedule/";
const title = "Schedule a Call | Rebel Ape Marketing";
const description = "Book a quick strategy call with Rebel Ape Marketing. Align your goals, get fast insights, and leave with clear next steps—even if we don't work together.";
const image = "https://RebelApeCDN.b-cdn.net/rebel-ape-main/schedule-a-call.webp";
const type = "website";
const robots = "index,follow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>

  <!-- Hero with Calendar -->
  <section class="hero relative bg-black bg-cover bg-center bg-no-repeat pb-8 lg:pb-12 pt-16 lg:pt-16" style="background-image: url('https://RebelApeCDN.b-cdn.net/UOMC/background-gorilla.webp')">
    <div class="mx-auto max-w-6xl px-6 flex flex-col items-center justify-center">

      <!-- Headline -->
      <div class="w-full max-w-[1200px] text-center lg:pt-6">
        <h1 class="font-black text-center text-white text-6xl lg:text-7xl font-exbold mb-6">
          <span class="text-white">Schedule a </span>
          <span class="text-green-600">Strategy Call</span>
        </h1>
        <p class="text-white text-base lg:text-xl max-w-2xl mx-auto mt-6">
          Let's talk about your goals and how to get your marketing performing like it should. No pressure. No hard pitch. Just clarity and direction.
        </p>
      </div>

      <!-- Calendar Embed (Full Width in Hero) -->
      <div class="w-full max-w-6xl mt-12 lg:mt-8">
        <div class="bg-white/5 rounded-lg overflow-hidden backdrop-blur-sm border border-white/10 p-6">
          <iframe
            src="https://link.therebelape.com/widget/booking/nMZGE52hRTWV4t0SjD6I"
            style="width: 100%; border: none; overflow: hidden; min-height: 600px;"
            scrolling="no"
            id="nMZGE52hRTWV4t0SjD6I_1760940116234"
          ></iframe>
          <script src="https://link.therebelape.com/js/form_embed.js" type="text/javascript"></script>
        </div>
      </div>

    </div>
  </section>

  <!-- Social Proof Bar -->
  <SocialProofBar />

  <!-- What to Expect -->
  <section id="details" class="py-16 lg:py-24 bg-slate-100">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-4xl font-bold mb-8 text-center">What to Expect</h2>
      <div class="grid gap-8 sm:grid-cols-3">
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">1) Quick Goals Chat</h3>
          <p class="text-gray-600">We'll align on outcomes that matter to you.</p>
        </div>
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">2) Review & Insights</h3>
          <p class="text-gray-600">We'll look at what's working and where you're leaking.</p>
        </div>
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">3) Clear Next Steps</h3>
          <p class="text-gray-600">Actionable recommendations — whether we work together or not.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 lg:py-24 section-checkers">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-4xl font-bold mb-12 text-center">Why Others Trust Us</h2>
      <TestimonialsDefault />
    </div>
  </section>

</Base>

---
import { getCollection } from 'astro:content';
import type { GetStaticPaths, Page } from 'astro';
import Base from '../../layouts/Base.astro';
import Hero from '../../components/sections/Hero.astro';

export const getStaticPaths = (async ({ paginate }) => {
  // Get all blog posts, filter out drafts, and sort by date
  const allPosts = await getCollection('posts');
  const publishedPosts = allPosts
    .filter(post => !post.data.draft && post.data.publishDate)
    .sort((a, b) => {
      const dateA = a.data.publishDate ? new Date(a.data.publishDate).getTime() : 0;
      const dateB = b.data.publishDate ? new Date(b.data.publishDate).getTime() : 0;
      return dateB - dateA;
    });

  // Separate featured and regular posts
  const featuredPosts = publishedPosts.filter(post => post.data.featured);
  const regularPosts = publishedPosts.filter(post => !post.data.featured);

  // Use paginate to create pages with 12 posts each
  return paginate(regularPosts, {
    pageSize: 12,
    props: { featuredPosts },
  });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const { featuredPosts } = Astro.props;

// Generate pagination numbers with ellipsis
function getPaginationNumbers(currentPage: number, lastPage: number) {
  const delta = 1; // Number of pages to show on each side of current page
  const range = [];
  const rangeWithDots = [];

  for (let i = 1; i <= lastPage; i++) {
    if (i === 1 || i === lastPage || (i >= currentPage - delta && i <= currentPage + delta)) {
      range.push(i);
    }
  }

  let prev = 0;
  for (const i of range) {
    if (prev && i - prev > 1) {
      rangeWithDots.push('...');
    }
    rangeWithDots.push(i);
    prev = i;
  }

  return rangeWithDots;
}

const paginationNumbers = getPaginationNumbers(page.currentPage, page.lastPage);

// SEO - adjust title for pagination
const pageNum = page.currentPage > 1 ? ` - Page ${page.currentPage}` : '';
const title = `Roofing Marketing Blog | SEO, Google Ads & Lead Generation | Rebel Ape${pageNum}`;
const description = "Expert insights on roofing marketing, SEO, Google Ads, and lead generation strategies. Learn how to get more qualified leads and grow your contracting business.";
const canonical = page.currentPage === 1
  ? "https://therebelape.com/blog/"
  : `https://therebelape.com/blog/${page.currentPage}/`;
const image = "https://RebelApeCDN.b-cdn.net/rebel-ape-main/blog-og-image.jpg";
const type = "website";
const robots = "index,follow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <section>
    <Hero
      backgroundImage="https://RebelApeCDN.b-cdn.net/Rebel%20Website/Homepage/bg-gorilla-direct.webp"
      title="<span class='text-rebel-green'>Marketing Insights</span> That Actually <span class='text-rebel-green'>Work</span>"
      subtitle="For Roofing Contractors Who Want More Leads"
      description="No fluff. No theory. Just proven strategies to rank higher in Google, run better ads, and convert more website visitors into paying customers."
      features={[
        'SEO Strategies That Rank',
        'Google Ads Best Practices',
        'Landing Page Optimization'
      ]}
      buttonText="Get Free Marketing Checklist"
      buttonIcon="download"
      buttonHref="https://uomc.therebelape.com"
      fetchpriority="high"
    />

    <!-- Featured Posts Section (only show on first page) -->
    {page.currentPage === 1 && featuredPosts.length > 0 && (
      <section class={`py-16 md:py-24 section-checkers`}>
        <div class="max-w-7xl mx-auto px-6">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Articles</h2>
            <p class="text-lg text-gray-600">Our most comprehensive guides to help you dominate your market</p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
            {featuredPosts.map(post => (
              <article class="bg-white rounded-lg shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300">
                {post.data.image && (
                  <img
                    src={post.data.image}
                    alt={post.data.title}
                    class="w-full h-64 object-cover"
                  />
                )}
                <div class="p-6">
                  <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                    {post.data.publishDate && (
                      <time datetime={new Date(post.data.publishDate).toISOString()}>
                        {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                    )}
                    {post.data.categories && (
                      <span class="bg-rebel-green text-white px-3 py-1 rounded-full text-xs font-semibold">
                        {post.data.categories[0]}
                      </span>
                    )}
                  </div>
                  <h3 class="text-2xl font-bold mb-3 leading-tight">
                    <a
                      href={`/blog/${post.slug}/`}
                      class="text-gray-900 hover:text-rebel-green transition-colors"
                    >
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-3">{post.data.description}</p>
                  <a
                    href={`/blog/${post.slug}/`}
                    class="inline-flex items-center text-rebel-green font-semibold hover:underline"
                  >
                    Read Article
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Posts Section -->
    <section class={`py-16 md:py-24 section-slate`}>
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {page.currentPage === 1 ? 'All Articles' : `All Articles - Page ${page.currentPage}`}
          </h2>
          <p class="text-lg text-gray-600">Browse our complete library of marketing insights</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {page.data.map(post => (
            <article class="bg-white rounded-lg shadow-xl overflow-hidden hover:shadow-2xl transition-shadow duration-300">
              {post.data.image && (
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <div class="flex items-center gap-4 mb-3 text-sm text-gray-600">
                  {post.data.publishDate && (
                    <time datetime={new Date(post.data.publishDate).toISOString()}>
                      {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </time>
                  )}
                  {post.data.categories && (
                    <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-xs font-semibold">
                      {post.data.categories[0]}
                    </span>
                  )}
                </div>
                <h3 class="text-xl font-bold mb-2 leading-tight">
                  <a
                    href={`/blog/${post.slug}/`}
                    class="text-gray-900 hover:text-rebel-green transition-colors"
                  >
                    {post.data.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">{post.data.description}</p>
                <a
                  href={`/blog/${post.slug}/`}
                  class="inline-flex items-center text-rebel-green font-semibold hover:underline"
                >
                  Read Article
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>

        <!-- Pagination Controls -->
        {(page.lastPage > 1) && (
          <nav class="mt-12 flex justify-center items-center gap-2" aria-label="Pagination">
            {page.url.prev && (
              <a
                href={page.url.prev}
                class="px-3 py-2 md:px-4 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 font-semibold transition-colors"
                aria-label="Previous page"
              >
                <svg class="w-5 h-5 inline-block md:mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span class="hidden md:inline">Previous</span>
              </a>
            )}

            <div class="flex gap-1 md:gap-2">
              {paginationNumbers.map((item, index) => (
                item === '...' ? (
                  <span
                    key={`ellipsis-${index}`}
                    class="px-3 py-2 md:px-4 text-gray-500 font-semibold"
                  >
                    ...
                  </span>
                ) : (
                  <a
                    key={item}
                    href={item === 1 ? '/blog/' : `/blog/${item}/`}
                    class={`px-3 py-2 md:px-4 rounded-lg font-semibold transition-colors ${
                      item === page.currentPage
                        ? 'bg-rebel-green text-white'
                        : 'bg-white border border-gray-300 hover:bg-gray-50'
                    }`}
                    aria-label={`Page ${item}`}
                    aria-current={item === page.currentPage ? 'page' : undefined}
                  >
                    {item}
                  </a>
                )
              ))}
            </div>

            {page.url.next && (
              <a
                href={page.url.next}
                class="px-3 py-2 md:px-4 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 font-semibold transition-colors"
                aria-label="Next page"
              >
                <span class="hidden md:inline">Next</span>
                <svg class="w-5 h-5 inline-block md:ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            )}
          </nav>
        )}
      </div>
    </section>

  </section>
</Base>

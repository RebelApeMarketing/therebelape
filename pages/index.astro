---
import Base from '../layouts/Base.astro';
import Hero from '../components/sections/Hero.astro';
import SocialProofBar from '../components/sections/SocialProofBar.astro';
import CompaniesTrustUs from '../components/sections/CompaniesTrustUs.astro';
import WhatWeDo from '../components/sections/WhatWeDo.astro';
import HowItWorks from '../components/sections/HowItWorks.astro';
import CaseStudy from '../components/sections/CaseStudy.astro';
import WhoWeAre from '../components/sections/WhoWeAre.astro';
import Services from '../components/sections/Services.astro';
import TestimonialsDefault from '../components/sections/TestimonialsDefault.astro';
import Guarantee from '../components/sections/Guarantee.astro';
import FAQdefault from '../components/sections/FAQdefault.astro';
import UOMC from '../components/sections/UOMC.astro';


// SEO
const title = "Websites, Landing Pages & PPC for Contractors | Rebel Ape";
const description = "We build fast contractor websites and landing pages, then run Google and Meta ads to drive qualified leads. No fluff. Just phones ringing.";
const canonical = "https://therebelape.com";
const image = "https://RebelApeCDN.b-cdn.net/bg-gorilla-direct.webp"; // 1200x630 recommended
const type = "website"; // or "article" for posts
const robots = "index,follow"; // optional override
---

<Base {title} {description} {canonical} {image} {type} {robots}>
  <section>
    <Hero 
      backgroundImage="https://RebelApeCDN.b-cdn.net/bg-gorilla-direct.webp"
      title="Websites Built For <span class='text-rebel-green'>Speed.</span> Ads Optimized For <span class='text-rebel-green'>Growth.</span>"
      subtitle="That's Exactly <span class='text-rebel-green'>What We Deliver.</span>"
      description="Sites built with modern frameworks for faster load times and higher conversions. Your site stays lightweight, secure, and designed to scale with your business."
      features={[
        'Lightening Fast Websites',
        'Expert Ad Campaigns',
        'Transparent Results'
      ]}
      buttonText="Schedule a Call"
      buttonIcon="calendar"
      buttonHref="/schedule/"
      fetchpriority="high"
    />
    <SocialProofBar />

    <section class={`py-16 md:py-24 section-checkers`}>
      <WhatWeDo />
    </section>

    <section class={`pt-0 pb-16 md:pt-0 md:pb-24 section-checkers`}>
      <CompaniesTrustUs />
    </section>

    <section class={`py-16 md:py-24 section-slate`}>
      <HowItWorks />
    </section>

    <section class={`py-16 md:py-24 section-checkers`}>
      <CaseStudy />
    </section>
    
    <section class={`py-16 md:py-24 section-slate`}>
      <WhoWeAre />
    </section>

    <section class={`py-16 md:py-24 section-checkers`}>
      <Services />
    </section>

    <section class="py-16 md:py-24 section-slate">
      <TestimonialsDefault />
    </section>

    <section class={`py-16 md:py-24 section-checkers`}>
      <Guarantee /> 
    </section>

    <section class={`py-16 md:py-24 section-slate`}>
      <FAQdefault />
    </section>

    <section class={`pt-16 pb-0 section-checkers`}>
      <UOMC /> 
    </section>

  </section>
</Base>
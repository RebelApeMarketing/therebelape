---
import Base from '../../layouts/Base.astro';
import TestimonialsDefault from '../../components/sections/TestimonialsDefault.astro';

const canonical = "https://therebelape.com/schedule/thank-you/";
const title = "Thanks — Your Call Is Booked | Rebel Ape Marketing";
const description = "Thanks for scheduling! We've sent a confirmation email with your call details.";
const image = "https://RebelApeCDN.b-cdn.net/rebel-ape-main/time-booked.webp";
const type = "website";
const robots = "noindex,nofollow";
---

<Base {title} {description} {canonical} {image} {type} {robots}>

  <!-- Hero / Confirmation -->
  <section class="hero relative bg-black bg-cover bg-center bg-no-repeat pb-8 lg:pb-12 pt-16 lg:pt-16" style="background-image: url('https://RebelApeCDN.b-cdn.net/UOMC/background-gorilla.webp')">
    <div class="mx-auto max-w-6xl px-6 flex flex-col items-center justify-center">

      <!-- Confirmation Message -->
      <div class="w-full max-w-[1200px] text-center lg:pt-6">
        <h1 class="font-black text-center text-white text-6xl lg:text-7xl font-exbold mb-6">
          Your Call is <span class="text-green-600">Scheduled!</span>
        </h1>
        <p class="text-white text-base lg:text-xl max-w-2xl mx-auto mt-6">
          We're looking forward to talking with you. Check your email for confirmation details and a calendar invite.
        </p>
      </div>

    </div>
  </section>

  <!-- Before We Talk -->
  <section id="details" class="py-16 lg:py-24 bg-slate-100">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-4xl font-bold mb-8 text-center">Before We Talk</h2>
      <div class="grid gap-8 sm:grid-cols-3">
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">✓ Check Your Email</h3>
          <p class="text-gray-600">Look for a calendar invite and confirmation. Add it to your calendar so you don't miss it.</p>
        </div>
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">✓ Grab Some Context</h3>
          <p class="text-gray-600">Think about your biggest marketing challenge. We'll dig into it together.</p>
        </div>
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">✓ No Prep Needed</h3>
          <p class="text-gray-600">Seriously. Just show up ready to talk. We'll handle the rest.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What Happens on the Call -->
  <section class="py-16 lg:py-24 section-checkers">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-4xl font-bold mb-8 text-center">What Happens on the Call</h2>
      <div class="grid gap-8 sm:grid-cols-3">
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">1) Quick Goals Chat</h3>
          <p class="text-gray-600">We'll align on outcomes that matter to you and understand where you're at.</p>
        </div>
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">2) Review & Insights</h3>
          <p class="text-gray-600">We'll look at what's working in your marketing and where you're leaking opportunities.</p>
        </div>
        <div class="bg-white rounded-lg shadow-xl p-6">
          <h3 class="text-xl font-semibold mb-3">3) Clear Next Steps</h3>
          <p class="text-gray-600">Actionable recommendations — whether we work together or not.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 lg:py-24 section-checkers">
    <div class="mx-auto max-w-6xl px-4">
      <h2 class="text-4xl font-bold mb-12 text-center">Why Others Trust Us</h2>
      <TestimonialsDefault />
    </div>
  </section>

</Base>
